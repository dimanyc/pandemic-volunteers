<%= simple_form_for volunteer, url: '/#apply', method: :post do |f| %>
  <%= f.input :country, collection: countries, label: false,  :selected => 'US'%>

  <%= f.input :state, label: false, collection: states, :selected => 'NY' %>

  <%= f.input :city, label: false, collection: cities, :selected => 'New York' %>

  <%= f.input :name,
    label: false,
    required: true,
    input_html: {
      oninvalid: "this.setCustomValidity('#{t('.errors.name')}')",
      oninput: "setCustomValidity('')"
    } %>

  <%= f.input :email,
    label: false,
    input_html: { autocomplete: 'email' },
    input_html: {
      minlength: 7,
      oninvalid: "this.setCustomValidity('#{t('.errors.email')}')",
      oninput: "setCustomValidity('')"
    } %>

  <%= f.input :phone,
    label: false,
    input_html: { autocomplete: 'tel' },
    input_html: {
      minlength: 7,
      oninvalid: "this.setCustomValidity('#{t('.errors.phone')}')",
      oninput: "setCustomValidity('')"
    } %>

  <%= f.input :crew,
    collection: volunteer_crews,
    prompt: t(".defaults.crew_collection"),
    label: false
  %>

<%= f.input :about,
  label: false,
  as: :text,
  input_html: {
    minlength: 20,
      oninvalid: "this.setCustomValidity('#{t('.errors.about')}')",
    oninput: "setCustomValidity('')"
  } %>

  <%= f.input :immunity, as: :radio_buttons, :collection => [ ['Yes', true], ['No', false] ], :checked => ['No', false] %>

  <%= f.button :submit, t(".cta"), id: 'volunteer_submit', class: "btn-danger btn-block btn-lg font-weight-bold shadow" %>
<% end %>
